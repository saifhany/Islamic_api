model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  password     String     
  name         String?
  isHidden     Boolean   @default(false)
  phone        String       @unique
  otp          Int?       @default(0)
  finishedPage Int       @default(0) 
  lastPage     Int       @default(0)
  role         Role      @default(USER)
  usercontacts Contact[]
  posts        Post[]
  Khatma       Khatma[]
}
model Contact {
  id     Int   @id @default(autoincrement())
  phone  String?
  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Post {
  id               Int       @id @default(autoincrement())
  timeToStart      DateTime  @default(now())
  timeToEnd        String?
  title            String?
  numberOfJuzz     Int
  done             Boolean   @default(false)
  joined           Int[]
  submittedUsers   Int[]
  unSubmittedUsers Int[]
  publisher        User      @relation(fields: [publisherId], references: [id])
  publisherId      Int
}

model Khatma {
  id          Int    @id @default(autoincrement())
  title       String
  publisher   User   @relation(fields: [publisherId], references: [id])
  publisherId Int
  juzzs       Json?
}

enum Role {
  USER
  ADMIN
}
